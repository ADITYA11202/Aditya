// Online C compiler to run C program online
#include <stdio.h>

struct Patient {
    char NAME[10];
    int AGE;
    int DOB;
    int CONTACT_NUMBER;
    int PATIENT_ID;
    char DISEASE[10];
    int WORD_NUMBER;
    int DOCTOR_ID;
    int BILL;
};

int main() {

    struct Patient registation[2], temp;

    // Input data
    for (int i = 0; i < 2; i++) {

        printf("\n ENTER PATIENT NAME: ");
        scanf("%s", registation[i].NAME);

        printf(" ENTER PATIENT AGE: ");
        scanf("%d", &registation[i].AGE);

        printf(" ENTER DATE OF BIRTH: ");
        scanf("%d", &registation[i].DOB);

        printf(" ENTER CONTACT NUMBER: ");
        scanf("%d", &registation[i].CONTACT_NUMBER);

        printf(" ENTER PATIENT ID: ");
        scanf("%d", &registation[i].PATIENT_ID);

        printf(" ENTER DISEASE: ");
        scanf("%s", registation[i].DISEASE);

        printf(" ENTER WARD NUMBER: ");
        scanf("%d", &registation[i].WORD_NUMBER);

        printf(" ENTER DOCTOR ID: ");
        scanf("%d", &registation[i].DOCTOR_ID);

        printf(" ENTER TOTAL AMOUNT (BILL): ");
        scanf("%d", &registation[i].BILL);
    }

    // -------------------------------------
    // ðŸ”¹ BUBBLE SORT BY BILL (ASCENDING)
    // -------------------------------------
    for (int i = 0; i < 2 - 1; i++) {
        for (int j = 0; j < 2 - i - 1; j++) {
            if (registation[j].BILL > registation[j + 1].BILL) {

                temp = registation[j];
                registation[j] = registation[j + 1];
                registation[j + 1] = temp;
            }
        }
    }

    // Output Sorted Data
    printf("\n\n--- SORTED PATIENT DETAILS (BY BILL ASCENDING) ---\n");

    for (int i = 0; i < 2; i++) {

        printf("\n============================================\n");
        printf(" NAME: %s\n", registation[i].NAME);
        printf(" AGE: %d\n", registation[i].AGE);
        printf(" DATE OF BIRTH: %d\n", registation[i].DOB);
        printf(" CONTACT NUMBER: %d\n", registation[i].CONTACT_NUMBER);
        printf(" PATIENT ID: %d\n", registation[i].PATIENT_ID);
        printf(" DISEASE: %s\n", registation[i].DISEASE);
        printf(" WARD NUMBER: %d\n", registation[i].WORD_NUMBER);
        printf(" DOCTOR ID: %d\n", registation[i].DOCTOR_ID);
        printf(" TOTAL AMOUNT (BILL): %d\n", registation[i].BILL);
        printf("============================================\n");
    }

    return 0;
}
